# MS-ORB IBKR Trading Bot Configuration
# Copy this file to .env and fill in your values

# ===== IBKR Connection =====
# TWS Paper: 7497, TWS Live: 7496
# IB Gateway Paper: 4002, IB Gateway Live: 4001
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# ===== Trading Parameters =====
# Risk per trade as decimal (0.01 = 1%)
RISK_PER_TRADE=0.01

# Risk-Reward target ratio
RR_TARGET=5.0

# Maximum trades per session
MAX_TRADES_PER_SESSION=2

# ===== Polling Settings =====
# Price polling interval in seconds
PRICE_POLL_INTERVAL=10

# ===== Logging =====
LOG_DIR=logs
LOG_LEVEL=INFO

# ===== Database =====
DB_PATH=ibkr_trades.db
