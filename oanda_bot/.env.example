# MS-ORB Trading Bot Configuration
# Copy this file to .env and fill in your values

# ===== OANDA API Credentials =====
# Get from: https://www.oanda.com/account/tpa/personal_token
OANDA_API_KEY=your-api-key-here
OANDA_ACCOUNT_ID=your-account-id-here

# Environment: 'practice' for demo, 'live' for real trading
OANDA_ENVIRONMENT=practice

# ===== Trading Parameters =====
# Risk per trade as decimal (0.01 = 1%)
RISK_PER_TRADE=0.01

# Risk-Reward target ratio
RR_TARGET=5.0

# Maximum trades per session per instrument
MAX_TRADES_PER_SESSION=2

# ===== Polling Settings =====
# Price polling interval in seconds
PRICE_POLL_INTERVAL=10

# ===== Logging =====
# Log directory
LOG_DIR=logs

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===== Database =====
# SQLite database path for trade logging
DB_PATH=trades.db
